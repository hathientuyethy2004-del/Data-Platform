# Web User Analytics - Development Environment

PRODUCT_NAME=web-user-analytics
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPICS=topic_web_events,topic_page_views,topic_user_sessions
KAFKA_CONSUMER_GROUP=web-analytics-consumer-dev
KAFKA_BATCH_SIZE=1000

# Spark Configuration
SPARK_MASTER=local[4]
SPARK_EXECUTOR_MEMORY=2g
SPARK_DRIVER_MEMORY=2g
SPARK_APP_NAME=web-user-analytics-dev

# Storage Configuration
DELTA_LAKE_PATH=/tmp/data_lake
BRONZE_PATH=/tmp/data_lake/bronze
SILVER_PATH=/tmp/data_lake/silver
GOLD_PATH=/tmp/data_lake/gold

# Session Configuration
SESSION_TIMEOUT_MINUTES=15
CROSS_DOMAIN_TRACKING=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8002
API_WORKERS=2

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL_SECONDS=600

# Monitoring
PROMETHEUS_PORT=9091
HEALTH_CHECK_INTERVAL_SECONDS=30

# Logging
LOG_FORMAT=json
LOG_OUTPUT=console

# Feature Flags
FEATURE_HEATMAP_TRACKING=true
FEATURE_SESSION_REPLAY=false
FEATURE_ML_ATTRIBUTION=false
FEATURE_REAL_TIME_ALERTS=true
