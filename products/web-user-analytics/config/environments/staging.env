# Web User Analytics - Staging Environment

PRODUCT_NAME=web-user-analytics
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# Kafka Configuration
KAFKA_BROKERS=kafka-staging-1:9092,kafka-staging-2:9092,kafka-staging-3:9092
KAFKA_TOPICS=topic_web_events,topic_page_views,topic_user_sessions
KAFKA_CONSUMER_GROUP=web-analytics-consumer-staging
KAFKA_BATCH_SIZE=5000

# Spark Configuration
SPARK_MASTER=spark://spark-master-staging:7077
SPARK_EXECUTOR_MEMORY=4g
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_CORES=2
SPARK_APP_NAME=web-user-analytics-staging

# Storage Configuration
DELTA_LAKE_PATH=/mnt/data_lake/staging
BRONZE_PATH=/mnt/data_lake/staging/bronze
SILVER_PATH=/mnt/data_lake/staging/silver
GOLD_PATH=/mnt/data_lake/staging/gold

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
CROSS_DOMAIN_TRACKING=true
BOT_DETECTION=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8002
API_WORKERS=4

# Cache Configuration
REDIS_HOST=redis-staging
REDIS_PORT=6379
REDIS_DB=1
CACHE_TTL_SECONDS=1800

# Monitoring
PROMETHEUS_PORT=9091
HEALTH_CHECK_INTERVAL_SECONDS=60

# Logging
LOG_FORMAT=json
LOG_OUTPUT=file
LOG_FILE=/var/log/web-analytics/staging.log

# Feature Flags
FEATURE_HEATMAP_TRACKING=true
FEATURE_SESSION_REPLAY=false
FEATURE_ML_ATTRIBUTION=false
FEATURE_REAL_TIME_ALERTS=true

# Security
API_TOKEN_SECRET=${STAGING_API_TOKEN_SECRET}
ENABLE_SSL=true
